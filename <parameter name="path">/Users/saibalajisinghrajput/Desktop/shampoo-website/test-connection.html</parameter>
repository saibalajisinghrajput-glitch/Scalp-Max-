<body>
    <div class="container">
        <header>
            <h1>Supabase Connection Test</h1>
        </header>

        <main>
            <div id="results"></div>
            
            <div class="checkout-card">
                <h2>Test Insert Order</h2>
                <button onclick="testInsert()" class="btn-primary">Test Insert Order</button>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script src="config.js"></script>
    <script>
        const results = document.getElementById('results');
        
        function log(message, type = 'info') {
            const div = document.createElement('div');
            div.className = `test-result ${type}`;
            div.innerHTML = message;
            results.appendChild(div);
        }
        
        log('<h3>üîç Testing Supabase Connection...</h3>');
        
        // Test connection
        log(`<strong>URL:</strong> ${SUPABASE_URL}`, 'info');
        log(`<strong>Key:</strong> ${SUPABASE_KEY.substring(0, 20)}...`, 'info');
        
        async function testConnection() {
            try {
                // Test fetch
                log('Testing connection...', 'info');
                
                const { data, error } = await supabaseClient
                    .from('orders')
                    .select('*')
                    .limit(1);
                
                if (error) {
                    log(`<strong>‚ùå Error:</strong><br>${error.message}<br><strong>Details:</strong><pre>${JSON.stringify(error, null, 2)}</pre>`, 'error');
                    
                    // Check for RLS issues
                    if (error.message.includes('row level security') || error.code === '42501') {
                        log('<strong>üîê RLS Policy Issue:</strong><br>Your table has Row Level Security enabled. You need to either:<br>1. Disable RLS on the orders table, or<br>2. Create a policy that allows inserts', 'error');
                    }
                } else {
                    log('<strong>‚úÖ Connection successful!</strong><br>Data fetched: ' + JSON.stringify(data), 'success');
                }
            } catch (err) {
                log(`<strong>‚ùå Exception:</strong><br>${err.message}<br><pre>${err.stack}</pre>`, 'error');
            }
        }
        
        async function testInsert() {
            const testOrder = {
                order_id: 'TEST-' + Date.now(),
                name: 'Test Customer',
                email: 'test@example.com',
                phone: '1234567890',
                address: 'Test Address',
                city: 'Test City',
                state: 'Test State',
                pincode: '123456',
                quantity: '1',
                total: '1499',
                payment: 'UPI',
                status: 'pending',
                date: new Date().toISOString().split('T')[0],
                time: new Date().toTimeString().split(' ')[0]
            };
            
            log('<h3>üß™ Testing Insert...</h3>', 'info');
            log(`<strong>Data:</strong><pre>${JSON.stringify(testOrder, null, 2)}</pre>`, 'info');
            
            try {
                const { data, error } = await supabaseClient
                    .from('orders')
                    .insert(testOrder)
                    .select();
                
                if (error) {
                    log(`<strong>‚ùå Insert Error:</strong><br>${error.message}<br><strong>Full Error:</strong><pre>${JSON.stringify(error, null, 2)}</pre>`, 'error');
                } else {
                    log('<strong>‚úÖ Order inserted successfully!</strong><br>Data: ' + JSON.stringify(data), 'success');
                    log('<br>üü¢ Check your Supabase Dashboard ‚Üí Table Editor ‚Üí orders<br>You should see the test order there!', 'success');
                }
            } catch (err) {
                log(`<strong>‚ùå Exception:</strong><br>${err.message}`, 'error');
            }
        }
        
        // Run test on load
        testConnection();
    </script>
